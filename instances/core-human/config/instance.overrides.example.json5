{
  agents: {
    defaults: {
      // Keep replay order stable for reasoning/tool turns.
      contextPruning: {
        mode: "off",
      },
      // Default to deeper reasoning for GPT-5.2-family agents.
      thinkingDefault: "high",
    },
  },
  channels: {
    telegram: {
      dmPolicy: "pairing",
      groupPolicy: "allowlist",
      accounts: {
        vbarsegyan: {
          botToken: "${TELEGRAM_BOT_TOKEN_VBARSEGYAN}",
        },
        drichardson: {
          botToken: "${TELEGRAM_BOT_TOKEN_DRICHARDSON}",
          // Prevent in-chat commands (for example /model) from silently drifting runtime config.
          configWrites: false,
        }
      },
    },
  },
  plugins: {
    entries: {
      telegram: {
        enabled: true,
      },
    },
  },
  gateway: {
    mode: "local",
  },
}
