{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/oco/inventory.schema.json",
  "title": "oco Inventory",
  "type": "object",
  "required": ["version", "instances"],
  "properties": {
    "version": { "const": 1 },
    "organization": {
      "type": "object",
      "properties": {
        "org_id": { "type": "string" },
        "org_slug": { "type": "string" },
        "display_name": { "type": "string" }
      }
    },
    "defaults": {
      "type": "object",
      "properties": {
        "port_stride": { "type": "integer", "minimum": 1 }
      }
    },
    "instances": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "host", "paths", "openclaw"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "enabled": { "type": "boolean" },
          "profile": { "type": "string" },
          "host": {
            "type": "object",
            "required": ["gateway_port"],
            "properties": {
              "bind": { "type": "string" },
              "gateway_port": { "type": "integer", "minimum": 1, "maximum": 65535 }
            }
          },
          "paths": {
            "type": "object",
            "required": ["config_dir", "state_dir", "workspace_root", "generated_dir"],
            "properties": {
              "config_dir": { "type": "string" },
              "state_dir": { "type": "string" },
              "workspace_root": { "type": "string" },
              "generated_dir": { "type": "string" }
            }
          },
          "openclaw": {
            "type": "object",
            "required": ["config_layers"],
            "properties": {
              "config_layers": { "type": "array", "minItems": 1, "items": { "type": "string" } },
              "docker": { "type": "object" }
            }
          },
          "agents": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "bindings"],
              "properties": {
                "id": { "type": "string" },
                "role": { "type": "string" },
                "workspace": { "type": "string" },
                "agent_dir": { "type": "string" },
                "model": { "type": "string" },
                "integrations": { "type": "array", "items": { "type": "string" } },
                "skills": { "type": "array", "items": { "type": "string" } },
                "bindings": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "object",
                    "required": ["match"],
                    "properties": {
                      "match": {
                        "type": "object",
                        "required": ["channel"],
                        "properties": {
                          "channel": { "type": "string" },
                          "accountId": { "type": "string" },
                          "account_id": { "type": "string" }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
